# ==============================================
# WANDERWISE TRAVEL BOOKING PLATFORM
# Environment Configuration File
# ==============================================

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/wanderwise
MONGODB_TEST_URI=mongodb://localhost:27017/wanderwise_test

# Server Configuration
PORT=5000
NODE_ENV=development
API_BASE_URL=http://localhost:5000/api

# Email Configuration for WanderWise
# Note: Use Gmail App Password (16 characters) instead of regular password
# Email Configuration
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASS=your-16-character-app-password
WANDERWISE_EMAIL=admin@wanderwise.com

# Gmail App Password Setup:
# 1. Go to Google Account settings
# 2. Enable 2-Factor Authentication
# 3. Generate App Password for "Mail"
# 4. Use the 16-character code as EMAIL_PASS
# SMTP Configuration (Gmail)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Frontend Configuration
CLIENT_URL=http://localhost:3000
FRONTEND_URL=http://localhost:3000

# JWT Configuration (for authentication)
JWT_SECRET=wanderwise-super-secret-jwt-key-2024-secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=wanderwise-refresh-token-secret-key

# App Configuration
APP_NAME=WanderWise
APP_VERSION=1.0.0
APP_DESCRIPTION=Your Gateway to Amazing Travel Adventures

# Payment Gateway Configuration
# Razorpay (Popular in India)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# Stripe (International)
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=5242880
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/wanderwise.log

# External APIs (Optional for future features)
WEATHER_API_KEY=your_weather_api_key
MAPS_API_KEY=your_google_maps_api_key
SMS_API_KEY=your_sms_gateway_api_key

# Social Login (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Development Tools
DEBUG=wanderwise:*
ENABLE_CORS=true



# Production Override (uncomment for production)
# NODE_ENV=production
# MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/wanderwise?retryWrites=true&w=majority
# CLIENT_URL=https://your-production-domain.com
# API_BASE_URL=https://api.your-production-domain.com